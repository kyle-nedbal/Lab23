@{
}
@model Movie
@{
    ViewData["Title"] = "Welcome to our Movie List";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h4>Search By Title</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Movies" asp-action="SearchResultTitle" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title:</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Movies" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<h4>Search By Genre</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Movies" asp-action="SearchResultGenre" method="post">
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Genre:</label>
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}